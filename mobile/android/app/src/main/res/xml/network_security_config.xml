<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuração base: permite HTTP para desenvolvimento -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Domínios específicos que podem usar HTTP -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>

        <!-- Seu IP local (ajuste conforme necessário) -->
        <domain includeSubdomains="true">192.168.0.8</domain>

        <!-- Emulador Android -->
        <domain includeSubdomains="true">10.0.2.2</domain>

        <!-- Adicione outros IPs da sua rede se necessário -->
        <!-- <domain includeSubdomains="true">192.168.1.X</domain> -->
    </domain-config>
</network-security-config>
