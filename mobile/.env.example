# ==========================================
# Barber Boss Mobile - Environment Variables
# ==========================================
# This file contains example environment variables for the mobile application.
# Copy this file to .env and update the values according to your environment.

# ==========================================
# API Configuration
# ==========================================
# Base URL for the backend API
API_BASE_URL=http://localhost:3000

# API version prefix
API_PREFIX=/api/v1

# Request timeout in milliseconds
API_TIMEOUT=30000

# ==========================================
# Authentication Configuration
# ==========================================
# Token storage key
AUTH_TOKEN_KEY=barber_boss_token

# Refresh token storage key
AUTH_REFRESH_TOKEN_KEY=barber_boss_refresh_token

# Token expiration time in seconds
AUTH_TOKEN_EXPIRATION_TIME=3600

# ==========================================
# Application Configuration
# ==========================================
# Application name
APP_NAME=Barber Boss

# Application version
APP_VERSION=0.0.1

# Default language (pt-BR, en-US, etc.)
APP_DEFAULT_LANGUAGE=pt-BR

# Supported languages (comma-separated)
APP_SUPPORTED_LANGUAGES=pt-BR,en-US

# ==========================================
# Feature Flags
# ==========================================
# Enable debug mode with additional logging
FEATURE_ENABLE_DEBUG_MODE=true

# Enable analytics tracking
FEATURE_ENABLE_ANALYTICS=false

# Enable push notifications
FEATURE_ENABLE_PUSH_NOTIFICATIONS=false

# Enable offline mode
FEATURE_ENABLE_OFFLINE_MODE=true

# ==========================================
# Logging Configuration
# ==========================================
# Enable console logging
LOGGING_ENABLE_CONSOLE=true

# Log level: debug, info, warn, error
LOGGING_LEVEL=debug

# Enable remote logging to external service
LOGGING_ENABLE_REMOTE=false

# ==========================================
# Storage Configuration
# ==========================================
# Storage prefix for all keys
STORAGE_PREFIX=bb_

# Storage type: localStorage, indexedDB
STORAGE_TYPE=localStorage

# ==========================================
# Business Rules Configuration
# ==========================================
# Default appointment duration in minutes
BUSINESS_DEFAULT_APPOINTMENT_DURATION=60

# Minimum advance booking time in hours
BUSINESS_MIN_ADVANCE_BOOKING=1

# Maximum advance booking time in days
BUSINESS_MAX_ADVANCE_BOOKING=30

# Cancellation deadline in hours before appointment
BUSINESS_CANCELLATION_DEADLINE=2

# ==========================================
# UI/UX Configuration
# ==========================================
# Default theme: light, dark, auto
UI_DEFAULT_THEME=auto

# Enable animations
UI_ENABLE_ANIMATIONS=true

# Items per page for pagination
UI_ITEMS_PER_PAGE=10

# ==========================================
# Notes
# ==========================================
# - For production builds, update API_BASE_URL to your production API URL
# - Disable debug mode and console logging in production
# - Enable analytics and push notifications in production
# - Use indexedDB for storage in production for better performance
# - Adjust business rules according to your requirements
