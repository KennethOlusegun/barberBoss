// 1. Configuração do Banco
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

// 2. Enums (Para evitar "magic strings" no código)
enum Role {
  ADMIN   // O Administrador do Sistema
  BARBER  // O Barbeiro 
  CLIENT  // O Cliente final (futuro)
}

enum AppointmentStatus {
  PENDING   // Aguardando confirmação (futuro)
  CONFIRMED // Agendado
  CANCELED  // Cancelado
  COMPLETED // Serviço feito (Gera pontos na Fase 3)
  NO_SHOW   // Cliente não foi
}

enum BlockType {
  LUNCH     // Horário de almoço
  BREAK     // Pausa/intervalo
  DAY_OFF   // Folga (dia inteiro)
  VACATION  // Férias
  CUSTOM    // Personalizado
}

// 3. Modelos

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // Hash!
  phone     String?  // Opcional por enquanto
  role      Role     @default(CLIENT)
  
  // Relacionamentos
  // Como barbeiro
  barberAppointments Appointment[] @relation("BarberAppointments")
  // Como cliente
  clientAppointments Appointment[] @relation("ClientAppointments")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id          String   @id @default(uuid())
  name        String   // Ex: "Corte Degradê"
  description String?
  price       Decimal  @db.Decimal(10, 2) // Dinheiro sempre use Decimal, nunca Float!
  durationMin Int      // Ex: 30, 45, 60 (Minutos)

  // Comissão do barbeiro (percentual, ex: 0.5 para 50%)
  barberCommission Decimal? @db.Decimal(5, 4) // Opcional, padrão pode ser definido na aplicação

  // Relacionamentos
  appointments Appointment[]

  active      Boolean  @default(true) // Para "apagar" sem perder histórico
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Appointment {
  id        String            @id @default(uuid())
  startsAt  DateTime          // Início do atendimento
  endsAt    DateTime          // Fim (Calculado: start + duration)
  status    AppointmentStatus @default(CONFIRMED)

  // Dados do Barbeiro
  barberId   String?
  barber     User?   @relation("BarberAppointments", fields: [barberId], references: [id])

  // Dados do Cliente
  // Se o cliente tiver App, usamos o userId. 
  // Se for agendamento manual do barbeiro ("João do Zap"), usamos o clientName.
  userId     String?
  user       User?   @relation("ClientAppointments", fields: [userId], references: [id])
  clientName String? 

  // Dados do Serviço
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Índices para deixar a busca de conflito rápida
  @@index([startsAt, endsAt]) 
}

model Settings {
  id                String   @id @default(uuid())
  businessName      String   @default("Barber Boss")
  
  // Horário comercial
  openTime          String   @default("08:00") // Formato HH:mm
  closeTime         String   @default("18:00") // Formato HH:mm
  
  // Dias de funcionamento (0=Domingo, 6=Sábado)
  workingDays       Int[]    @default([1, 2, 3, 4, 5, 6]) // Segunda a Sábado
  
  // Intervalo entre agendamentos (em minutos)
  slotIntervalMin   Int      @default(15)
  
  // Configurações de agendamento
  maxAdvanceDays    Int      @default(30)  // Quantos dias no futuro pode agendar
  minAdvanceHours   Int      @default(2)   // Mínimo de horas de antecedência
  
  // Notificações (para futuro)
  enableReminders   Boolean  @default(false)
  reminderHoursBefore Int    @default(24)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Garantir apenas uma linha de configuração
  @@map("settings")
}

model TimeBlock {
  id          String    @id @default(uuid())
  type        BlockType @default(CUSTOM)
  reason      String?
  
  startsAt    DateTime
  endsAt      DateTime
  
  isRecurring Boolean   @default(false)
  recurringDays Int[]   @default([])
  
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([startsAt, endsAt])
  @@index([active])
  @@map("time_blocks")
}