# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
POSTGRES_USER=barber_user
POSTGRES_PASSWORD=barber_password
POSTGRES_DB=barber_boss

# Database URL para Prisma (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://barber_user:barber_password@localhost:5432/barber_boss?schema=public

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
# Separate multiple origins with commas
ALLOWED_ORIGINS=http://localhost:8100,http://localhost:4200
CORS_CREDENTIALS=true

# Rate Limiting / Throttling
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# Business Configuration (Optional)
DEFAULT_BUSINESS_HOUR_START=8
DEFAULT_BUSINESS_HOUR_END=18
DEFAULT_APPOINTMENT_DURATION=30
